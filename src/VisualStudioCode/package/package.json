{
  "name": "roslynator",
  "publisher": "josefpihrt-vscode",
  "displayName": "Roslynator",
  "description": "A collection of 500+ analyzers, refactorings and fixes for C#, powered by Roslyn.",
  "icon": "images/icon.png",
  "version": "4.0.3",
  "author": "Josef Pihrt",
  "license": "Apache-2.0",
  "homepage": "https://github.com/josefpihrt/roslynator",
  "repository": {
    "type": "git",
    "url": "https://github.com/josefpihrt/roslynator.git"
  },
  "bugs": {
    "url": "https://github.com/josefpihrt/roslynator/issues"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "Roslyn",
    "Analyzer",
    "Refactoring",
    "C#",
    "CSharp"
  ],
  "engines": {
    "vscode": "^1.42.0"
  },
  "files": [
    "roslyn/*"
  ],
  "extensionDependencies": [
    "ms-dotnettools.csharp"
  ],
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "commands": [
      {
        "title": "Roslynator: Open Default Configuration File (.roslynatorconfig)",
        "command": "roslynator.openDefaultConfigurationFile"
      }
    ],
    "configuration": {
      "title": "Roslynator",
      "properties": {
        "roslynator.autoUpdateOmnisharpJson": {
          "type": "boolean",
          "default": true,
          "description": "Automatically update omnisharp.json file."
        }
      }
    }
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "vscode:uninstall": "node ./out/cleanupOmnisharpConfiguration.js"
  },
  "devDependencies": {
    "@types/fs-extra": "^8.0.1",
    "@types/glob": "^7.1.1",
    "@types/json5": "0.0.30",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.42.0",
    "fs-extra": "^8.1.0",
    "glob": "^7.1.5",
    "mocha": "^6.2.2",
    "tslint": "^5.20.0",
    "typescript": "^3.6.4",
    "vscode-test": "^1.2.2"
  },
  "dependencies": {
    "json5": "^2.1.1"
  }
}
